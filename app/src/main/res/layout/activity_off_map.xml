<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_off_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.atif.maps_.offMap">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a0c8e9"
        android:id="@+id/relativelayout2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sofflinemap"
            android:src="@drawable/defultsubwaymap"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@id/menubar"
            android:scaleType="matrix"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/menubar"
            android:layout_alignParentBottom="true"
            android:background="#75B095">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/schedule"
                android:layout_weight="1"
                android:src="@drawable/schedule"
                android:scaleType="centerCrop"
                android:background="@null"
                android:padding="20dp"
                />
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/offlinemap"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/map"
                android:scaleType="centerCrop"
                android:padding="20dp"
                />
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/planner"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/planner"
                android:scaleType="centerCrop"
                android:padding="20dp"
                />
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnAlerts"
                android:layout_weight="1"
                android:src="@drawable/alerts"
                android:scaleType="centerCrop"
                android:background="@null"
                android:padding="20dp"
                />
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/setting"
                android:layout_weight="1"
                android:src="@drawable/settings"
                android:scaleType="centerCrop"
                android:background="@null"
                android:padding="20dp"
                />
        </LinearLayout>
        </RelativeLayout>

</RelativeLayout>
